<?xml version="1.0" encoding="UTF-8"?>

<templates>

    <t t-name="barcoder_order.template">
        <div class="p-3"
            style="height: 100vh; overflow-y: auto; box-sizing: border-box; padding: 1rem;">
            <h2 class="mb-3">Entregas</h2>

            <div class="input-group mb-3">
                <span class="input-group-text">
                    <i class="fa fa-search" />
                </span>
                <input class="form-control" placeholder="Buscar…" t-model="state.query" />
                <button class="btn btn-outline-secondary" t-on-click="clearSearch"
                    t-att-disabled="!state.query">
                    Limpiar
                </button>
            </div>

            <t t-if="state.loading">
                <div class="alert alert-info">Cargando…</div>
            </t>

            <t t-elif="!state.filteredPickings.length">
                <div class="alert alert-warning mb-0">No hay resultados.</div>
            </t>

            <t t-else="">
                <div class="list-group">
                    <t t-foreach="state.filteredPickings" t-as="p" t-key="p.id">
                        <a href="#"
                            class="list-group-item list-group-item-action d-flex justify-content-between align-items-center"
                            t-on-click.prevent="() => this.openPicking(p.id)">
                            <span>
                                <t t-out="p.name" />
                            </span>
                            <span> Asignado a <t
                                    t-out="p.assigned_id_packing ? p.assigned_id_packing[1] : '—'" />
                            </span>

                            <span class="badge bg-primary text-white">Abrir</span>
                        </a>
                    </t>
                </div>
            </t>
        </div>
    </t>


    <t t-name="barcoder_order.scan_template">
        <div class="p-3"
            style="height: 100vh; overflow-y: auto; box-sizing: border-box; padding: 1rem;">

            <div class="
            d-flex align-items-center justify-content-between mb-3">
                <div>
                    <div class=" info-cliente">
                        <div>Cliente: <t t-esc=" state.clientInfo.client" /></div>
                        <div class=" assigned">Asignado a: <t
                                t-esc=" state.clientInfo.assigned_id_packing" /></div>
                    </div>

                    <h2 class=" mb-0">Escanear productos</h2>
                    <small class=" text-muted">
                        <t t-out=" state.lines.filter(l=>
            l.done).length" /> / <t
                            t-out="state.lines.length" /> completados </small>
                </div>

                <div class="btns">
                    <button class="btn btn-outline-secondary" t-on-click="backToList">
                        <i class="fa fa-arrow-left me-1" /> Volver </button>

                    <button class="btn btn-success" t-on-click="openAddProduct">
                        <i class="fa fa-plus me-1" /> Agregar </button>

                    <button class="btn btn-success" t-on-click="AddNote">
                        <i class="fa fa-sheet-plastic me-1" /> Nota </button>
                </div>
            </div>

            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <label class="form-label mb-2">Barcode</label>

                    <div class="input-group input-group-lg">
                        <span class="input-group-text">
                            <i class="fa fa-barcode" />
                        </span>

                        <input class="form-control"
                            autofocus="autofocus"
                            placeholder="Escanea o escribe y presiona Enter…"
                            t-model="state.scan"
                            t-on-keydown="onKeyDown" />

                        <button class="btn btn-outline-secondary"
                            t-on-click="() => { state.scan=''; }"
                            t-att-disabled="!state.scan">
                            Limpiar
                        </button>

                        <button class="btn btn-primary"
                            t-on-click="()=> this.processScan()"
                            t-att-disabled="!state.scan">
                            OK
                        </button>

                        <button class="btn btn-outline-secondary"
                            t-if="mobileScanner"
                            t-on-click="openMobileScanner">
                            <i class="fa fa-camera me-1" /> Cámara </button>

                    </div>

                    <div class="mt-2 small text-muted">
                        Tip: el escáner normalmente “teclea” y manda Enter.
                    </div>
                </div>
            </div>

            <!-- Loading -->
            <t t-if="state.loading">
                <div class="alert alert-info">
                    <i class="fa fa-spinner fa-spin me-1" /> Cargando líneas… </div>
            </t>

            <!-- Empty -->
            <t t-elif="!state.lines.length">
                <div class="alert alert-warning mb-0">
                    Este picking no tiene líneas para escanear.
                </div>
            </t>

            <t t-else="">
                <div class="row g-2">
                    <t t-foreach="state.lines" t-as="l" t-key="l.line_id">
                        <div class="col-12">

                            <div class="card shadow-sm"
                                t-att-class="
                          (l.done ? 'border-success ' : '') +
                          (state.lastScannedLineId === l.line_id ? 'border-2 bg-success bg-opacity-10' : '')
                       ">

                                <div
                                    class="card-body d-flex justify-content-between align-items-start">

                                    <div class="me-3">
                                        <div class="fw-bold d-flex align-items-center gap-2">
                                            <t t-out="l.product_name" />
                                            <t t-if="state.lastScannedLineId === l.line_id">
                                                <span class="badge bg-success">
                                                    <i class="fa fa-bolt me-1" /> Escaneando </span>
                                            </t>
                                            <t t-if="l.done">
                                                <span class="badge bg-success">
                                                    <i class="fa fa-check me-1" /> OK </span>
                                            </t>
                                        </div>

                                        <div class="text-muted small"> Barcode: <t
                                                t-out="l.barcode or '-'" />
                                        </div>
                                        <div class="text-muted small"> UoM: <t
                                                t-out="l.uom_name or '-'" />
                                        </div>
                                    </div>

                                    <div class="text-end" style="min-width: 170px;">
                                        <!-- contador -->
                                        <div class="mb-2">
                                            <span class="badge fs-6"
                                                t-att-class="l.done ? 'bg-success' : 'bg-secondary'">
                                                <t t-out="l.scanned_qty" /> / <t
                                                    t-out="l.required_qty" />
                                            </span>
                                        </div>

                                        <!-- edición manual -->
                                        <t t-if="l.editing">
                                            <div
                                                class="input-group input-group-sm justify-content-end">
                                                <input type="number"
                                                    min="0"
                                                    class="form-control text-end"
                                                    style="max-width: 90px;"
                                                    t-model="l.manual_qty" />
                                                <button class="btn btn-success"
                                                    t-on-click.prevent="() => this.saveManual(l.line_id)"
                                                >
                                                    <i class="fa fa-check" />
                                                </button>
                                                <button class="btn btn-outline-secondary"
                                                    t-on-click="() => this.toggleEdit(l.line_id)">
                                                    <i class="fa fa-times" />
                                                </button>
                                            </div>
                                        </t>
                                        <t t-else="">
                                            <button class="btn btn-outline-primary btn-sm"
                                                t-on-click.prevent="() => this.toggleEdit(l.line_id)"
                                            >
                                                <i class="fa fa-pencil me-1" /> Editar </button>

                                            <div />
                                            <br />
                                            <button class="btn btn-outline-primary btn-sm"
                                                t-on-click.prevent="() => this.Delete(l.line_id)"
                                            >
                                                <i class="fa fa-trash me-1" /> Eliminar </button>
                                        </t>

                                        <t t-if="!l.done">
                                            <div class="small text-muted mt-2">Pendiente</div>
                                        </t>
                                    </div>

                                </div>
                            </div>

                        </div>
                    </t>
                </div>
            </t>

        </div>

        <t t-if="state.addOpen">
            <div class="modal d-block" tabindex="-1" style="background: rgba(0,0,0,.5);">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">

                        <div class="modal-header">
                            <h5 class="modal-title">Agregar producto</h5>
                            <button type="button" class="btn-close" t-on-click="closeAddProduct" />
                        </div>

                        <div class="modal-body">
                            <label class="form-label">Filtrar por nombre</label>
                            <input class="form-control"
                                placeholder="Escribe para filtrar…"
                                t-model="state.productFilter" />

                            <label class="form-label mt-3">Producto</label>
                            <select class="form-select" size="10" t-model="state.addProductId">
                                <option value="">-- Selecciona --</option>

                                <t t-foreach="filteredProducts" t-as="p" t-key="p.id">
                                    <option t-att-value="p.id">
                                        <t t-esc="p.name" />
                                    </option>
                                </t>
                            </select>

                            <div class="mt-3">
                                <label class="form-label">Cantidad</label>
                                <input type="number" min="1" class="form-control"
                                    t-model="state.addQty" />
                            </div>
                        </div>


                        <div class="modal-footer">
                            <button class="btn btn-outline-secondary" t-on-click="closeAddProduct">
                                Cancelar</button>

                            <button class="btn btn-primary"
                                t-att-disabled="!state.addProductId || !state.addQty || state.addSaving"
                                t-on-click="confirmAddProduct">
                                <t t-if="state.addSaving">
                                    <i class="fa fa-spinner fa-spin me-1" />
                                </t>
                                Agregar </button>
                        </div>

                    </div>
                </div>
            </div>
        </t>


        <t t-if="state.note">
            <div class="modal d-block" tabindex="-1" style="background: rgba(0,0,0,.5);">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">

                        <div class="modal-header">
                            <h5 class="modal-title">Agregar nota</h5>
                            <button type="button" class="btn-close" t-on-click="closeAddNote" />
                        </div>

                        <div class="modal-body">
                            <label class="form-label">Nota</label>
                            <textarea class="form-control"
                                rows="3"
                                placeholder="Escribe la nota…"
                                t-model="state.noteText" />
                        </div>

                        <div class="modal-footer">
                            <button class="btn btn-outline-secondary" t-on-click="closeAddNote">
                                Cancelar
                            </button>

                            <button class="btn btn-primary"
                                t-att-disabled="!state.noteText || state.noteSaving"
                                t-on-click="ConfirmNote">
                                <t t-if="state.noteSaving">
                                    <i class="fa fa-spinner fa-spin me-1" />
                                </t>
                                Agregar </button>
                        </div>

                    </div>
                </div>
            </div>
        </t>


    </t>


    <t t-inherit="stock_barcode.MainMenu" t-inherit-mode="extension">

        <xpath expr="//div[contains(@class,'o_main_menu_buttons')]" position="inside">
            <div class="col">
                <button class="button_operations btn btn-block btn-primary mb-4 w-100"
                    t-on-click="() => this.actionService.doAction('barcode_order.barcoder_order_tag_action')">
                    Checking
                </button>
            </div>
        </xpath>

    </t>


</templates>